datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model Product {
  id          String      @id @default(cuid())
  name        String
  description String
  price       Decimal
  images      String[]    // URLs to high-res mockup images
  colors      String[]    // Available colors (e.g., ["#000000", "#333333"])
  sizes       String[]    // Available sizes (e.g., ["S", "M", "L", "XL"])
  createdAt   DateTime    @default(now())
  updatedAt   DateTime    @updatedAt
  OrderItems  OrderItem[] // Relation to orders
}

model Design {
  id        String     @id @default(cuid())
  imageUrl  String     // S3 URL of the uploaded/generated design
  placement Json       // placement coordinates: { x: number, y: number, scale: number }
  createdAt DateTime   @default(now())
  OrderItem OrderItem? // A design belongs to a specific order item
}

model Order {
  id              String      @id @default(cuid())
  customerEmail   String
  customerName    String
  status          OrderStatus @default(PENDING)
  totalAmount     Decimal
  shippingAddress Json        // Structured address data
  items           OrderItem[]
  createdAt       DateTime    @default(now())
  updatedAt       DateTime    @updatedAt
}

model OrderItem {
  id        String  @id @default(cuid())
  orderId   String
  order     Order   @relation(fields: [orderId], references: [id])
  productId String
  product   Product @relation(fields: [productId], references: [id])
  designId  String  @unique
  design    Design  @relation(fields: [designId], references: [id])
  quantity  Int
  size      String
  color     String
}

enum OrderStatus {
  PENDING
  PAID
  IN_PRODUCTION
  SHIPPED
}
