datasource db {
  provider = "postgresql"
}

generator client {
  provider = "prisma-client-js"
}

model Product {
  id          String       @id @default(cuid())
  name        String
  description String
  price       Decimal
  images      String[]     // URLs to high-res mockup images
  colors      String[]     // Available colors (e.g., ["#000000", "#333333"])
  sizes       String[]     // Available sizes (e.g., ["S", "M", "L", "XL"])
  sku         String?      @unique // SKU code for admin tracking
  isActive    Boolean      @default(true) // Soft-delete / hide from storefront
  stock       StockLevel[]
  createdAt   DateTime     @default(now())
  updatedAt   DateTime     @updatedAt
  OrderItems  OrderItem[]
}

model Design {
  id        String     @id @default(cuid())
  imageUrl  String     // S3 URL of the uploaded/generated design
  placement Json       // placement coordinates: { x: number, y: number, scale: number }
  createdAt DateTime   @default(now())
  OrderItem OrderItem? // A design belongs to a specific order item
}

model Order {
  id              String      @id @default(cuid())
  customerEmail   String
  customerName    String
  status          OrderStatus @default(PENDING)
  totalAmount     Decimal
  shippingAddress Json        // Structured address data
  paymentId       String?     // Stripe payment intent ID
  trackingNumber  String?     // Shipping tracking number
  trackingCarrier String?     // e.g. "FedEx", "USPS", "DHL"
  notes           String?     // Internal team notes
  items           OrderItem[]
  createdAt       DateTime    @default(now())
  updatedAt       DateTime    @updatedAt
}

model OrderItem {
  id        String  @id @default(cuid())
  orderId   String
  order     Order   @relation(fields: [orderId], references: [id])
  productId String
  product   Product @relation(fields: [productId], references: [id])
  designId  String  @unique
  design    Design  @relation(fields: [designId], references: [id])
  quantity  Int
  size      String
  color     String
}

model StockLevel {
  id           String  @id @default(cuid())
  productId    String
  product      Product @relation(fields: [productId], references: [id], onDelete: Cascade)
  size         String  // "S", "M", "L", "XL", etc.
  quantity     Int     @default(0)
  lowThreshold Int     @default(5) // Alert when stock falls below this

  @@unique([productId, size])
}

model AuditLog {
  id        String   @id @default(cuid())
  action    String   // "ORDER_SHIPPED", "STOCK_UPDATED", "PRODUCT_CREATED"
  entity    String   // "Order", "Product", "StockLevel"
  entityId  String
  details   Json?    // Additional context
  createdAt DateTime @default(now())
}

enum OrderStatus {
  PENDING
  PAID
  IN_PRODUCTION
  SHIPPED
  DELIVERED
  CANCELLED
}
